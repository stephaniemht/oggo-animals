<h1 class="cp-title">R√©f√©rentiel OGGO</h1>

<!-- üîπ ONGlets Toutes / Chiens / Chats -->
<div class="tabs" style="display:flex; gap:8px; margin: 8px 0 12px;">
  <% base_params = request.query_parameters.except(:page).symbolize_keys %>
  <% current_species = params[:species].presence %>
  <% active = ->(sp){ current_species == sp ? "background:#ede9fe; font-weight:600;" : "" } %>

  <%= link_to "üåç Toutes esp√®ces",
      admin_professions_path(base_params.merge(species: nil, page: 1)),
      class: "btn",
      style: "padding:8px 12px; border-radius:12px; #{current_species.nil? ? 'background:#ede9fe; font-weight:600;' : ''}" %>

  <%= link_to "üê∂ Chiens",
      admin_professions_path(base_params.merge(species: "dog", page: 1)),
      class: "btn",
      style: "padding:8px 12px; border-radius:12px; #{active.call('dog')}" %>

  <%= link_to "üê± Chats",
      admin_professions_path(base_params.merge(species: "cat", page: 1)),
      class: "btn",
      style: "padding:8px 12px; border-radius:12px; #{active.call('cat')}" %>
</div>

<div class="card">
  <%= form_with url: admin_professions_path,
                method: :get,
                local: true,
                data: { turbo: false },
                html: { id: "filters-form" } do %>

    <% if current_species.present? %>
      <%= hidden_field_tag :species, current_species %>
    <% end %>

    <div class="filters-row">
      <label>Recherche</label>
      <%= text_field_tag :q, @q, placeholder: "ex: berger, siamois‚Ä¶", class: "inp", autofocus: true %>

      <label>Pr√©sence</label>
      <%= select_tag :company_span,
            options_for_select([["Pr√©sent dans 1 compagnie","one"],["Pr√©sent dans ‚â•2 compagnies","multi"]], @company_span),
            include_blank: "‚Äî pr√©sence (optionnel) ‚Äî",
            class: "sel" %>

      <label>Par page</label>
      <%= select_tag :per_page,
            options_for_select([50,100,200,500,1000], @per_page),
            class: "sel",
            onchange: 'this.form.submit();' %>

      <%= hidden_field_tag :page, 1 %>

      <%= submit_tag "Rechercher", class: "btn" %>

      <% if @q.present? || @company_span.present? || params[:per_page].present? || current_species.present? %>
        <%= link_to "R√©initialiser", admin_professions_path, class: "btn secondary" %>
      <% end %>
    </div>

  <% end %>
</div>

<!-- ====== EXPORTS (s√©par√© du form de filtres) ====== -->
<div class="card" style="margin-top:10px;">
  <div class="filters-row" style="gap:8px; flex-wrap:wrap; align-items:center;">
    <span class="muted" style="font-weight:600;">Exports :</span>

    <form id="export-form"
          action="<%= admin_professions_matrix_path(format: :csv) %>"
          method="get"
          data-turbo="false"
          style="display:flex; gap:8px; flex-wrap:wrap; align-items:center;">

      <!-- format -->
      <select name="export_kind" id="export-kind" class="sel">
        <option value="csv">CSV r√©f√©rentiel + compagnies</option>
        <option value="php">PHP (sans alias)</option>
        <option value="php_alias">PHP (avec alias)</option>
      </select>

      <!-- esp√®ce -->
      <select name="species" id="export-species" class="sel">
        <option value="">Toutes esp√®ces</option>
        <option value="dog" <%= "selected" if current_species == "dog" %>>Chiens</option>
        <option value="cat" <%= "selected" if current_species == "cat" %>>Chats</option>
      </select>

      <button type="submit" class="btn secondary">T√©l√©charger</button>
    </form>
  </div>
</div>

<script>
  (function() {
    const form    = document.getElementById("export-form");
    const kindSel = document.getElementById("export-kind");

    form.addEventListener("submit", function(e) {
      const kind = kindSel.value;

      if (kind === "csv") {
        form.action = "<%= admin_professions_matrix_path(format: :csv) %>";
      } else if (kind === "php") {
        form.action = "<%= admin_professions_php_path %>";
        const old = form.querySelector('input[name="include_aliases"]');
        if (old) old.remove();
      } else if (kind === "php_alias") {
        form.action = "<%= admin_professions_php_path %>";
        let inp = form.querySelector('input[name="include_aliases"]');
        if (!inp) {
          inp = document.createElement("input");
          inp.type = "hidden";
          inp.name = "include_aliases";
          inp.value = "1";
          form.appendChild(inp);
        } else {
          inp.value = "1";
        }
      }
    });
  })();
</script>
